<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.true123.youhui.mapper.UserMapper">
	<select id="selectUser" resultType="cn.true123.youhui.bean.User">
		select * from user where id = #{id}
	</select>
	<select id="loginUser"  resultType="cn.true123.youhui.bean.User">
		select * from user where name = #{name} and password=#{password}
	</select>
	<insert id="insertUser" parameterType="cn.true123.youhui.bean.User">
		insert into user(id, name, password)
 		 values (#{id}, #{name}, #{password})
	</insert>
</mapper>